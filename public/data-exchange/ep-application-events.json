{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://epam.gpm.clinicalgenome.org/applicaiton-events.json",
    "title": "GeneTracker Event",
    "description": "A message published to the ep-application-events curation stream.",
    "type": "object",
    "properties": {
        "key": {
            "type": "string",
            "pattern": "^\\w{6}(-\\w{4}){3}-\\w{12}$"
        },
        "event_type": {
            "type": "string",
            "title": "Type of curation event",
            "enum": [
                "initiated", 
                "updated", 
                "step_approved", 
                "completed", 
                "deleted", 
                "member_added",     
                "member_removed"
            ]
        },
        "schema_version": { "type": "integer" },
        "data": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "pattern": "^\\w{8}(-\\w{4}){3}-\\w{12}$"
                },
                "approved_step": { 
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 4
                },
                "current_step": { 
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 4
                },
                "cdwg": {
                    "type": "object",
                    "properties": {
                        "uuid": {
                            "type": "string",
                            "pattern": "^\\w{6}(-\\w{4}){3}-\\w{12}$"
                        },
                        "name": { "type": "string"}
                    }
                },
                "working_name": {
                    "type": "string"
                },
                "long_base_name": {
                    "type": "string"
                },
                "short_base_name": {
                    "type": "string"
                },
                "affiliation_id": {
                    "type": "string"
                },
                "person": {
                    "type": "object",
                    "properties": {
                        "uuid": {
                            "type": "string",
                            "pattern": "^\\w{6}(-\\w{4}){3}-\\w{12}$"
                        },
                        "first_name": {"type": "string"},
                        "last_name": {"type": "string"},
                        "email": {"type": "string"}
                    }
                }
            },
            "required": [
                "uuid"
            ]
        }
    },
    "required": [
        "key",
        "event_type",
        "schema_version",
        "data"
    ]
}